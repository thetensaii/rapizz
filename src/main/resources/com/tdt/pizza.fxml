<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308"
      maxWidth="1.7976931348623157E308" minHeight="500.0" spacing="2.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="com.tdt.controllers.PizzaController">
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
    </padding>
    <children>
        <HBox alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <children>
                <Button fx:id="refresh" mnemonicParsing="false" text="Rafraichir"/>
                <Button fx:id="add_pizza" mnemonicParsing="false" text="Ajouter"/>
            </children>
        </HBox>
        <TableView fx:id="table" editable="true" fixedCellSize="-10.0" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308">
            <columns>
                <TableColumn fx:id="numero" maxWidth="50" minWidth="50.0" prefWidth="-1.0" text="N°"/>
                <TableColumn fx:id="name" maxWidth="200" minWidth="100.0" prefWidth="-1.0" text="Nom"/>
                <TableColumn fx:id="ingredients" maxWidth="200" minWidth="100.0" prefWidth="-1.0" text="Ingredients"/>
                <TableColumn fx:id="price_naine" maxWidth="200" minWidth="100.0" prefWidth="-1.0" text="Prix Naine"/>
                <TableColumn fx:id="price_humaine" maxWidth="200" minWidth="100.0" prefWidth="-1.0"
                             text="Prix Humaine"/>
                <TableColumn fx:id="price_ogresse" maxWidth="200" minWidth="100.0" prefWidth="-1.0"
                             text="Prix Ogresse"/>
                <TableColumn fx:id="operation" maxWidth="200.0" minWidth="100.0" prefWidth="-1.0" text="Opération"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
